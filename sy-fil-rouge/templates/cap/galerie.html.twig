    #navigation-mobile {             /* partie (#navigation-mobile) de css d'appel par js  => page Menu cachée */
        display: none;
        position:fixed;
        top:0;
        right:-100%;
        z-index: 700;

        background: url(../img/angeliquecalfatidotcom_motif-n.gif) repeat 0 0;
        background-size: 8px 8px;
        width:100%;
        height:568px;
    }
    .select {             
        -webkit-animation: moveToLeftFade .7s ease both;
        animation: moveToLeftFade .7s ease both;
    }
    @-webkit-keyframes moveToLeftFade {
        from { }
        to { opacity: 1; -webkit-transform: translateX(-100%); }
    }
    @keyframes moveToLeftFade {
        from { }
        to { opacity: 1; transform: translateX(-100%); }
    }
    .close {             
        -webkit-animation: moveFromLeftFade .5s ease both;
        animation: moveFromLeftFade .5s ease both;
    }
    @-webkit-keyframes moveFromLeftFade {
        from { opacity: 0.3; -webkit-transform: translateX(-100%); }
    }
    @keyframes moveFromLeftFade {
        from { opacity: 0.3; transform: translateX(-100%); }
    } 
    #navigation-mobile li {
        list-style: none;
    }
    #navigation-mobile li a{
        font-family: 'Crimson Text';
        font-weight: 600;
        display: block;
        text-align: center;
        font-size: 16px;
        line-height: 22px;
        text-transform: uppercase;
        color:rgba(224, 220, 204, 0.6);
    }
    #navigation-mobile li:first-child{
        margin-top: 142px;
    }
    #navigation-mobile li a:hover{
        color:#e0dccc;
    }
    #navigation-mobile li a:active,
    #navigation-mobile li a.current{
        color:#fffae4;
    }
