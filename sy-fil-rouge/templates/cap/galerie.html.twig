    }
    .menu-nav{     
        background: url(../img/hamburger-icon.svg) no-repeat 0 0;
        width: 25px;
        height:25px;
        display: block;
        position: fixed;
        right:15px;
        top: 15px;
        z-index: 1001;
		      transform: rotate(0deg);
		   transition: transform 300ms ease-out 0s;
    }
    .menu-nav.open {         
        background: url(../img/cross-icon.svg) no-repeat 0 0;
        width:25px;
        height:25px;
        display: block;
        z-index: 1002;
        transform: rotate(-180deg);
        transition: transform 300ms ease-out 0s;	
